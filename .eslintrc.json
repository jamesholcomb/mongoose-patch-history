{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "env": {
    "node": true,
    "es6": true,
    "mocha": true // Preserving existing mocha env
  },
  "parserOptions": {
    "ecmaVersion": "latest", // Keeping "latest" as per existing config
    "sourceType": "module",
    "project": "./tsconfig.json" // Link to your tsconfig.json
  },
  "rules": {
    "curly": [
      "error"
    ] // Preserving existing curly rule
    // You can override or add new rules here
    // For example, if you're using CommonJS modules and not ES modules for some parts:
    // "@typescript-eslint/no-var-requires": "off"
  },
  "overrides": [
    {
      "files": [
        "*.js"
      ], // Apply specific rules or configurations for JavaScript files
      "rules": {
        "@typescript-eslint/no-var-requires": "off" // Allow require statements in JS files
      }
    }
  ]
}
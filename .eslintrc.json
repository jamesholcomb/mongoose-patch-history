{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "env": {
    "node": true,
    "es6": true,
    "mocha": true // Preserving existing mocha env
  },
  "parserOptions": {
    "ecmaVersion": "latest", // Keeping "latest" as per existing config
    "sourceType": "module",
    "project": "./tsconfig.json" // Link to your tsconfig.json
  },
  "rules": {
    "curly": [
      "error"
    ], // Preserving existing curly rule
    "@typescript-eslint/no-explicit-any": "off" // Allow explicit any
    // You can override or add new rules here
    // For example, if you're using CommonJS modules and not ES modules for some parts:
    // "@typescript-eslint/no-var-requires": "off"
  },
  "overrides": [
    {
      "files": [
        "*.js"
      ], // Apply specific rules or configurations for JavaScript files
      "rules": {
        "@typescript-eslint/no-var-requires": "off" // Allow require statements in JS files
      }
    },
    {
      "files": [
        "test/**/*.ts" // This will cover all .ts files in the test directory
      ],
      "rules": {
        // Relaxing no-explicit-any for test files can be common for mocks or complex test data.
        "@typescript-eslint/no-explicit-any": "off"
        // If you use assertion libraries like Chai that rely on expression statements,
        // you might also add:
        // "@typescript-eslint/no-unused-expressions": "off"
      }
    }
  ]
}